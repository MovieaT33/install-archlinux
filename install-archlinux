set_console_keyboard_layout() {
	local console_keymap="$1"
	loadkeys "$console_keymap"
}

set_font() {
	local font="$1"
	setfont "$font"
}

set_default_font() {
	set_font ""
}

set_large_font() {
	set_font "ter-132b"
}

get_uefi_mode() {
	return $(cat /sys/firmware/efi/fw_platform_size)
}

verify_boot_mode() {
	local EXPECTED_UEFI_BITNESS=64

	local uefi_mode=get_uefi_mode()
	if [[ uefi_mode -ne $EXPECTED_UEFI_BITNESS ]]; then
		echo "Unsupported UEFI mode"
		exit 1
	fi
}

set_console_keyboard_layout "us"
set_large_font
verify_boot_mode
